<html>
  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['gantt']});
      google.charts.setOnLoadCallback(drawChart);

      function toDate(year, month, day) {
        return new Date(year, month - 1, day);
      }

      function drawChart() {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Task ID');
        data.addColumn('string', 'Task Name');
        data.addColumn('string', 'Resource');
        data.addColumn('date', 'Start Date');
        data.addColumn('date', 'End Date');
        data.addColumn('number', 'Duration');
        data.addColumn('number', 'Percent Complete');
        data.addColumn('string', 'Dependencies');

        // === Year 1: Foundations & Lightweight Prototype (with buffers) ===
        data.addRows([
          ['J1', 'Literature Review (FL, IDS, IoMT, XAI)', 'Research', toDate(2026,1,1), toDate(2026,2,28), null, 100, null],
          ['J2', 'Problem Definition & Dataset Selection', 'Research', toDate(2026,2,15), toDate(2026,4,15), null, 90, 'J1'],
          ['J3', 'Architecture Design of Lightweight FL-IDS', 'Design', toDate(2026,4,1), toDate(2026,6,15), null, 75, 'J2'],
          ['J4', 'Prototype v1 Implementation', 'Development', toDate(2026,6,1), toDate(2026,8,15), null, 60, 'J3'],
          ['J5', 'Preliminary Evaluation & Risk Buffer', 'Evaluation', toDate(2026,7,15), toDate(2026,10,15), null, 50, 'J4'],
          ['J6', 'Year 1 Report + Conference Paper #1 Draft', 'Publication', toDate(2026,10,1), toDate(2026,12,31), null, 40, 'J5'],
          ['J6a', 'Yearly Committee Review / Feedback', 'Milestone', toDate(2026,12,15), toDate(2026,12,31), null, 0, 'J6']
        ]);

        // === Year 2: Secure & Explainable FL (with overlapping & KPIs) ===
        data.addRows([
          ['J7', 'Robust Aggregation & Poisoning Defense Design', 'Development', toDate(2027,1,1), toDate(2027,2,28), null, 0, 'J6a'],
          ['J8', 'Secure FL Integration & Initial Experiments', 'Development', toDate(2027,2,15), toDate(2027,4,15), null, 0, 'J7'],
          ['J9', 'Explainable Module (XAI) Integration', 'Development', toDate(2027,4,1), toDate(2027,6,15), null, 0, 'J8'],
          ['J10', 'Robustness & Interpretability Experiments', 'Evaluation', toDate(2027,5,15), toDate(2027,8,15), null, 0, 'J9'],
          ['J11', 'Conference Paper #2 Drafting & Submission', 'Publication', toDate(2027,7,1), toDate(2027,10,1), null, 0, 'J10'],
          ['J12', 'Mid-Term Doctoral Evaluation', 'Milestone', toDate(2027,10,15), toDate(2027,11,15), null, 0, 'J11'],
          ['J12a', 'Model Architecture & Documentation', 'Milestone', toDate(2027,11,16), toDate(2027,12,31), null, 0, 'J12']
        ]);

        // === Year 3: Validation, Dissemination & Continuous Monitoring ===
        data.addRows([
          ['J13', 'Full Experiments on IoMT & Healthcare Data', 'Evaluation', toDate(2028,1,1), toDate(2028,3,31), null, 0, 'J12a'],
          ['J14', 'Result Analysis, Benchmarking & Continuous Research Monitoring', 'Research', toDate(2028,2,1), toDate(2028,4,30), null, 0, 'J13'],
          ['J15', 'Comparison with State-of-the-Art Models', 'Research', toDate(2028,4,1), toDate(2028,6,15), null, 0, 'J14'],
          ['J16', 'Q2 Journal Article Writing & Submission', 'Publication', toDate(2028,6,1), toDate(2028,8,15), null, 0, 'J15'],
          ['J17', 'Thesis Manuscript Preparation', 'Publication', toDate(2028,8,1), toDate(2028,10,31), null, 0, 'J16'],
          ['J18', 'PhD Defense Preparation & Presentation', 'Milestone', toDate(2028,11,1), toDate(2028,12,31), null, 0, 'J17'],
          ['J19', 'Continuous Monitoring of New Research & Publications', 'Research', toDate(2026,1,1), toDate(2028,12,31), null, 0, null]
        ]);

        // === Color mapping for each resource type ===
        var resourceColors = {
          'Research': '#2196F3',     // Blue
          'Design': '#673AB7',       // Purple
          'Development': '#009688',  // Teal
          'Evaluation': '#757575',   // Gray
          'Publication': '#4CAF50',  // Green
          'Milestone': '#FF9800'     // Orange
        };

        var colors = Object.values(resourceColors);
        var uniqueResources = Object.keys(resourceColors);

        // === Gantt chart options ===
        var options = {
          height: 1100,
          gantt: {
            trackHeight: 30,
            barCornerRadius: 4,
            criticalPathEnabled: true,
            criticalPathStyle: { stroke: '#e64a19', strokeWidth: 5 },
            labelStyle: { fontName: "Arial", fontSize: 13 },
            innerGridTrack: { fill: '#f9f9f9' },
            innerGridDarkTrack: { fill: '#eeeeee' },
            palette: colors.map((color, i) => ({
              color: color,
              dark: color,
              light: color,
              from: uniqueResources[i]
            }))
          }
        };

        var chart = new google.visualization.Gantt(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
  </head>

  <body>
